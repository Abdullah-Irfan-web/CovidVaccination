<body>
    <nav class="navbar">

       
        <div class="nav-container">
            <div class="logo">
              <a href="/searchcenter"> <img height="80px" width="147px" src="/images/logo.jpg" alt="logo"></a> 
        </div> 
        <div style="margin-top: 2px;" class="navlist">
            <ul>
                <li><a href="/myslots">My Slot</a></li>
              
                <li><a href="/logout">Sign Out</a></li>
               
                
            </ul>
        </div>
           

        </div>
    </nav>

    <div style="margin-top: 30px;" class="card shadow mb-5 bg-white rounded">

        <!--Card-Body-->
        <div class="card-body">
    
            <!--Card-Title-->
            <p class="card-title text-center shadow mb-3 rounded">Book Slot</p>
     
     <div class="icons text-center">
    
    
   
    
    
     </div>
    
        <hr>
    
           <form action="/bookslot" method="post">
    
            <!--First Row-->
            <div class="row">
                <div class="col-sm-6">
                <input required type="text" class="form-control mb-4" placeholder="First Name" name="fname" id="">
            </div>
    
                <input required type="hidden" name="centerid" value="<%=centerid%>">
            
            <div class="col-sm-6">
                <input required type="text"  class="form-control  mb-4" placeholder="Last Name" name="lname" id="">
            </div>
    
                
            </div>
           
           
    
            <!--Second Row-->
           
    
            <!--Third Row-->
            <div class="row">
    
                <div class="col-sm-6">
                    <input required type="text"  class="form-control  mb-4" placeholder="Phone" name="phone" id="">
                </div>
                
                <div class="col-sm-6">
                    <input required type="Number"  class="form-control  mb-4" placeholder="Age" name="age" id="">
                </div>
                    
    
                    </div>
                    <div class="row">
                       
        
                            <div class="col-sm-6">
                                
                                <input required placeholder="Departing" type="date" id="date-picker-example" name="date" class="form-control datepicker mb-4" style="font-family:Arial, FontAwesome" >
                            </div>
                
                                
                
                                
                       
                        
                        <div class="col-sm-6">
                            <select required class="browser-default custom-select mb-4" name="slot" id="select">
                                <option value="">Select Slot</option>
                                <option value="Morning">Morning Slot</option>
                                <option value="Afternoon">Afternoon Slot</option>
                                <option value="Evening">Evening Slot</option>
                           </select>
                        </div>
                            
            
                            </div>
            
                            <div class="row">
                                <div class="col-sm-6 mt-3">
                                    <label class="radiobtn"><input required type="radio" name="dose" value="Dose 1">Dose 1</label>
                                    <label class="radiobtn"><input required type="radio" name="dose" value="Dose 2">Dose 2</label>
           
                                </div>
                            </div>
                          
                    
    
                    
                                      <div style="margin-right: 20px;">
                    <button type="submit" class="btn btn-primary float-right mt-5">Book Slot</button>
                </div>
                
            </form>
                </div>
            </div>
   
    </body>
